@using Store.Web.Features.Products.ViewModels
@model IReadOnlyList<ProductViewModel>
@{
	ViewData["Title"] = "Productos";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var p in Model)
		{
			<tr>
				<td>@p.Name</td>
				<td>@p.Price.ToString("C")</td>
				<td>
					<a asp-action="Details" asp-route-id="@p.Id">Ver</a>
					<a asp-action="Edit" asp-route-id="@p.Id">Editar</a>
					<form asp-action="Delete" asp-route-id="@p.Id" method="post" style="display:inline">
						@Html.AntiForgeryToken()
						<button type="submit" class="btn btn-link">Eliminar</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>